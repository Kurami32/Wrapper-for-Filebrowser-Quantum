<resources>
    <style name="Base.Theme.FileBrowserQuantum" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cyan_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <!-- text color for light mode -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_darker</item>
        <!-- Buttons -->
        <item name="buttonStyle">@style/Widget.FileBrowserQuantum.Button</item>
    </style>

    <!-- Button for light mode -->
    <style name="Widget.FileBrowserQuantum.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/button_text_light</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Theme.FileBrowserQuantum" parent="Base.Theme.FileBrowserQuantum" />

</resources>